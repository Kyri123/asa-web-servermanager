{
	"ts-node": {
		"files": true,
		"require": ["tsconfig-paths/register"]
	},

	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"~db/*": ["../src/server/db/*"],
			"~env": ["../src/env.cjs"]
		},
		"outDir": "../dist"
	},
	"include": ["../src/env.cjs", "../src/server/db/**/*.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs"],
	"exclude": ["../node_modules"]
}
